        xmlns:local="clr-namespace:RentalMotorbike"
        mc:Ignorable="d"
        Title="" Height="355" Width="673"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
