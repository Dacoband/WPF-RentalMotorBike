        <GroupBox Header="Login" Margin="101,60,109,71"/>
        <Label Content="Email                " HorizontalAlignment="Left" Margin="135,130,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="135,174,0,0" VerticalAlignment="Top"/>
